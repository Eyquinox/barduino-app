<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/bottle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#00000000"
            android:scaleType="centerCrop"
            android:src="@drawable/bottle"
            android:clickable="true"
            android:text="Bottle"
            android:textSize="54sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/cocktail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/cocktail"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="0dp"
                android:background="#9C27B0"
                android:scaleType="centerCrop"
                android:src="@drawable/cocktails"
                android:text="Cocktails"
                android:textSize="54sp"
                app:layout_constraintBottom_toTopOf="@+id/back"
                app:layout_constraintTop_toBottomOf="@+id/bottle" />

        <Button
            android:id="@+id/back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="252dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="262dp"
            android:layout_marginBottom="32dp"
            android:background="#FF9800"
            android:text="Return"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cocktail" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>